<div class="form-horizontal" role="form">
  <%= form_for time_datum do |f| %>

    <div class="form-group">
      <%= f.label :clock_in, class: "col-sm-4 control-label centered" %>
      <div class="col-sm-4">
        <%= f.time_field :clock_in, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :break_out, class: "col-sm-4 control-label centered" %>
      <div class="col-sm-4">
        <%= f.time_field :break_out, class: "form-control" %> 
      </div>
    </div>

    <div class="form-group">
      <%= f.label :break_in, class: "col-sm-4 control-label centered" %>
      <div class="col-sm-4">
        <%= f.time_field :break_in, class: "form-control" %> 
      </div>
    </div>

    <div class="form-group">
      <%= f.label :clock_out, class: "col-sm-4 control-label centered" %>
       <div class="col-sm-4">
        <%= f.time_field :clock_out, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :notes, class: "col-sm-4 control-label centered" %>
        <div class="col-sm-4">
          <%= f.text_field :notes, class: "form-control" %>
        </div>
    </div>
    <div class="modal-footer">
      <%= link_to "Back", time_data_path, class: 'btn btn-default' %>
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
