<div class="container">
  <h1>Time Data</h1>

  <div class="row">
    <div class="col-md-8">
      <%= link_to "Clock In", new_time_datum_path, class: 'btn btn-success' %>
    </div>
  </div>

  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th colspan="1">Clock In</th>
        <th colspan="1">Break Out</th>
        <th colspan="1">Break In</th>
        <th colspan="1">Clock Out</th>
        <th colspan="1">Notes</th>
      </tr>
    </thead>
    <tbody id='time_data'>
      <%= render partial: 'time_datum', collection: @time_data %>
    </tbody>
  </table>
</div>

