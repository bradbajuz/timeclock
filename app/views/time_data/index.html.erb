<div class="container">
  <h1>Time Data</h1>

  <div class="row">
    <div class="col-md-8">
      <%= link_to "Enter Time", new_time_datum_path, class: "btn btn-success", data: {toggle: "modal", target: "#modal-window" }, remote: true %>
    </div>
  </div>
  <div id="modal-window" class="modal fade"  tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <%= render template: "time_data/new" %>
  </div>
<!--   <div id="modal-edit-window" class="modal fade"  tabindex="-1" role="dialog" aria-labelledby="myModalLabelEdit" aria-hidden="true">
    <%= render template: "time_data/edit" %>
  </div> -->

  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th colspan="1">Clock In</th>
        <th colspan="1">Break Out</th>
        <th colspan="1">Break In</th>
        <th colspan="1">Clock Out</th>
        <th colspan="1">Notes</th>
      </tr>
    </thead>
    <tbody id="time_data">
      <%= render partial: "time_datum", collection: @time_data %>
    </tbody>
  </table>
</div>

